@using MidNightMagicLibrary.Models
@model IEnumerable<Product>

<div class="container mt-4">
    <h1 class="mb-4 text-center">Welcome to Our Bookstore</h1>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="@product.ImageUrl" class="card-img-top img-fluid" alt="@product.Title" style="height: 150px; object-fit: cover;">
                    <div class="card-body p-2">
                        <h6 class="card-title text-truncate mb-1">@product.Title</h6>
                        <p class="text-muted small mb-0"><strong>Author:</strong> @product.Author</p>
                        <p class="text-muted small mb-0"><strong>Category:</strong> @product.Category.Name</p>
                        <p class="text-muted small"><strong>Price:</strong> @product.Price.ToString("c")</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center p-2">
                        <a asp-controller="Home" asp-action="ProductDetail" asp-route-productId="@product.Id" class="btn btn-outline-primary btn-sm">
                            Details & Purchase
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
