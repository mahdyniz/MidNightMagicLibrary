@using MidNightMagicLibrary.Models

@model Category
<div class="container mt-4">
<h2 class="text-center">Update a Category</h2>
<form method="post" asp-controller="Category" asp-action="Edit">
<input asp-for="@Model.Id" hidden/>
<div class="mb-3">
<label asp-for="@Model.Name" class="form-label">Name</label>
<input asp-for="@Model.Name" class="form-control"/>
<span asp-validation-for="@Model.Name" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for="@Model.DisplayOrder" class="form-label">Display Order</label>
<input asp-for="@Model.DisplayOrder" class="form-control"/>
<span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>
</div>
<button type="submit" class="btn btn-primary w-100">Update</button>
</form>
</div>