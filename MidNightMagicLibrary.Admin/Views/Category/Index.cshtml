@using MidNightMagicLibrary.Models
@model IEnumerable<Category>

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Categories</h1>
        <a asp-controller="Category" asp-action="Create" class="btn btn-success">Add New Category</a>
    </div>

    <table class="table table-striped table-hover border">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Display Order</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td class="text-center">
                        <a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@category.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id" class="btn btn-danger btn-sm ms-2">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
