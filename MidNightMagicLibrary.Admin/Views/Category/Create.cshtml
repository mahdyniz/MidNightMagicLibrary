@using MidNightMagicLibrary.Models

@model Category
<div class="container mt-5">
<h2 class="text-center">Add a New Category</h2>
<form asp-controller="Category" asp-action="Create" method="post" class="mt-4">
    <div class="mb-3">
    <label asp-for="@Model.Name" class="form-label">Name</label>
    <input asp-for="@Model.Name" class="form-control" required/>
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <label asp-for="@Model.DisplayOrder" class="form-lable">Display Order</label>
    <input asp-for="@Model.DisplayOrder" class="form-control" required/>
    <span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary w-100">Add</button>
</form>
</div>
