@using MidNightMagicLibrary.Models
@model Category

<div class="container mt-4">
<h2 class="text-center">Delete a Category</h2>
<form method="post" asp-controller="Category" asp-action="Delete">
<input asp-for="@Model.Id" hidden/>
<div class="mb-3">
<label asp-for="@Model.Name" class="form-label" ></label>
<input asp-for="@Model.Name" class="form-control" disabled/>
</div>
<div class="mb-3">
<label asp-for="@Model.DisplayOrder" class="form-label"></label>
<input asp-for="@Model.DisplayOrder" class="form-control" disabled/>
</div>
<button type="submit" class="btn btn-primary w-100">Delete</button>
</form>
</div>