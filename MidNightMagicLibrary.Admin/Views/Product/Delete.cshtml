@using MidNightMagicLibrary.Models.ViewModels
@model ProductVM

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Confirm Delete</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Product" asp-action="Delete">
                        <input asp-for="@Model.Product.Id" type="hidden" />

                        <div class="form-group">
                            <label asp-for="@Model.Product.Title">Title</label>
                            <input asp-for="@Model.Product.Title" class="form-control" disabled />
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Product.Author">Author</label>
                            <input asp-for="@Model.Product.Author" class="form-control" disabled />
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Product.Description">Description</label>
                            <textarea asp-for="@Model.Product.Description" class="form-control" rows="3" disabled></textarea>
                        </div>

                        <input asp-for="@Model.Product.ImageUrl" type="hidden" />

                        <div class="form-group">
                            <label asp-for="@Model.Product.CategoryId">Category</label>
                            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-control" disabled>
                                <option value="" disabled>-- Select Category --</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Product.Price">Price</label>
                            <input asp-for="@Model.Product.Price" class="form-control" disabled />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-danger mt-3">Delete</button>
                            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary mt-3 ml-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
