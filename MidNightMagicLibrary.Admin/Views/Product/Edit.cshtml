@using MidNightMagicLibrary.Models.ViewModels
@model ProductVM

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h4>Edit Product</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Product" asp-action="Edit" enctype="multipart/form-data">
                        <input asp-for="@Model.Product.Id" type="hidden" />

                        <div class="form-group">
                            <label asp-for="@Model.Product.Title">Title</label>
                            <input asp-for="@Model.Product.Title" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Product.Author">Author</label>
                            <input asp-for="@Model.Product.Author" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Product.Description">Description</label>
                            <textarea asp-for="@Model.Product.Description" class="form-control" rows="3" required></textarea>
                        </div>

                        <input asp-for="@Model.Product.ImageUrl" type="hidden" />

                        <div class="form-group">
                            <label asp-for="@Model.Product.CategoryId">Category</label>
                            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-control">
                                <option value="" disabled selected>-- Select Category --</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Product.Price">Price</label>
                            <input asp-for="@Model.Product.Price" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Product.Quantity">Quantity</label>
                            <input asp-for="@Model.Product.Quantity" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <label for="file">Upload Image</label>
                            <input type="file" name="file" class="form-control-file" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary mt-3">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
